#ifndef _BOOTLOADER
#define _BOOTLOADER
#include <Uefi.h>
#include <Library/UefiLib.h>
#include <Library/UefiBootServicesTableLib.h>
struct bootloader_graphicsInfo{
	unsigned int width;
	unsigned int height;
	unsigned char* pframebuffer;
	unsigned char* pfontbuffer;
	EFI_PIXEL_FORMAT pixelFormat;
};
struct bootloader_args{
	EFI_HANDLE bootloaderHandle;
	EFI_SYSTEM_TABLE* systable;		
	void* ppagetables;
	struct bootloader_graphicsInfo graphicsInfo;
};
typedef int(*kernelEntryType)(struct bootloader_args*);
#endif
